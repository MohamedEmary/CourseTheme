    <div class="prose max-w-none">
      {{ page.content }}
    </div>

    <!-- Mock Contact Form -->
    <div class="mt-12 bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">Contact Us</h2>
