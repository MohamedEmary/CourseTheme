<div class="container mx-auto px-4 py-10">
  <article class="max-w-3xl mx-auto">
    <header class="mb-8">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{{ page.title }}</h1>
      <time class="text-sm text-gray-600">{{ page.published_at | date: '%B %d, %Y' }}</time>
    </header>

    <div class="prose max-w-none">
      {{ page.content }}
    </div>
  </article>
</div>

{% schema %}
{
  "settings": [
    {
      "type": "checkbox",
      "default": false,
      "id": "enable_title",
      "label": "Title"
    }
  ]
}
{% endschema %}
