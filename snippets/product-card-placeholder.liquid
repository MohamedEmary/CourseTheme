<div class="w-full py-6 px-3">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
    {{ 'product-1' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}

    <div class="flex flex-col p-4">
      {% if section.settings.show_vendor %}
        <span class="text-sm text-gray-400">Vendor</span>
      {% endif %}
      {% if section.settings.show_title %}
        <span class="uppercase text-lg font-medium text-gray-700 y-2">Placeholder title</span>
      {% endif %}
      {% if section.settings.show_price %}
        <span class="text-base text-gray-500">{{ '9999' | money }}</span>
      {% endif %}
    </div>
  </div>
</div>
